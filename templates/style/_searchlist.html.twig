<div class="col-md-3 col-sm-12">
        <aside class="sidebar">
                <ul class="sidebar_list">



                    {% for style in styles %}

                        <li class="sidebar_item"><a href="#item_{{ style.id }}" class="sidebar_item_link">{{ style.getStyleSection().name }}</a></li>

                    {% endfor %}



                </ul>
        </aside>
</div>
<div class="col-md-9 col-sm-12 content">



                            {% for style in styles %}

                                <div class="content_item" id="item_{{ style.getStyleSection().id }}">
                                    <h3>{{ style.getStyleSection().name }}</h3>

                                    <div class="row">




                                            <div class="col-12 col-sm-6 content_item_style"><a href="{{ path('style_show', {
                                                    'name': style.name
                                                }) }}">{{ style.name }}</a></div>



                                    </div>
                                </div>

                            {% endfor %}




</div>

{% block javascripts %}

    <script type="text/javascript" src="{{ asset('//code.jquery.com/jquery-1.11.0.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('//code.jquery.com/jquery-migrate-1.2.1.min.js') }}"></script>
    <script src="{{ asset('js/slick.min.js') }}"></script>
    <script src="{{ asset('js/script.js') }}"></script>

{% endblock %}