 {% extends 'base.html.twig' %}

{% block breadcrumb %}

    {{ parent() }} / <a href="{{ asset('/style') }}" class="header_breadcrumbs_1">стили</a>

{% endblock %}

 {% block body %}

<section class="page">
    <div class="container">
        <div class="page_block page_title_block"></div>
        <h2 class="page_title">Виды пива</h2>
        <div class="row page_search_row">
            <div class="col-lg-2 d-none d-lg-block">
                <div class="page_search_res">найдено {{ styles|length }} видов</div>
            </div>
            <div class="col-lg-4 offset-lg-1 d-none d-lg-block">
                <input class="search page_search header_search" type="text">
                <img class="search_icon page_search_icon header_search_icon" src="../icons/search logo.png" alt="search">
            </div>
            <div class="col-lg-5 col-md-12">
                <div class="page_sort">
                    Сортировать: <a class="page_sort_active" href="#">по релевантности</a> / <a href="#">по популярности</a> / <a href="#">по алфавиту</a>
                </div>
            </div>
        </div>
        <div class="row main">
            <div class="col-md-3 col-sm-12">
                <aside class="sidebar">
                    <ul class="sidebar_list">

                        {% for styleSection in styleSections %}

                        <li class="sidebar_item"><a href="#item_{{ styleSection.id }}" class="sidebar_item_link">{{ styleSection.name }}</a></li>

                        {% endfor %}

                    </ul>
                </aside>
            </div>
            <div class="col-md-9 col-sm-12 content">

                {% for styleSection in styleSections %}

                    <div class="content_item" id="item_{{ styleSection.id }}">
                        <h3>{{ styleSection.name }}</h3>

                        <div class="row">

                            {% for style in styleSection.getStyles() %}


                                <div class="col-12 col-sm-6 content_item_style"><a href="{{ path('style_show', {
                                        'name': style.name
                                    }) }}">{{ style.name }}</a></div>

                            {% endfor %}

                        </div>
                    </div>

                {% endfor %}

            </div>
        </div>
    </div>
</section>


 {% endblock %}

